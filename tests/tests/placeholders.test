<?php
require_once('simpletest/autorun.php');
require_once('../geoPHP.inc');

class PlaceholdersTests extends UnitTestCase {

  function setUp() {
    if (geoPHP::geosInstalled()) {
      print "GEOS is installed.\n";
    }
    else {
      print "GEOS is not installed.\n";
    }
  }

  function testPlaceholders() {
    foreach (scandir('./input') as $file) {
      $parts = explode('.',$file);
      if ($parts[0]) {
        $format = $parts[1];
        $value = file_get_contents('./input/'.$file);
        $geometry = geoPHP::load($value, $format);

        $placeholders = array(
          array('name' => 'hasZ'),
          array('name' => 'is3D'),
          array('name' => 'isMeasured'),
          array('name' => 'isEmpty'),
          array('name' => 'coordinateDimension'),
          array('name' => 'z'),
          array('name' => 'm'),
        );

        foreach($placeholders as $method) {
          $argument = NULL;
          $method_name = $method['name'];
          if (isset($method['argument'])) {
            $argument = $method['argument'];
          }

          switch ($method_name) {
            default:
              $this->assertTrue($geometry->$method_name($argument), 'Failed on ' . $method_name);
          }
        }

      }
    }

  }
}
